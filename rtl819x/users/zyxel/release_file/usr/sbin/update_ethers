. /sbin/functions.sh
include /lib/config

#get some info from config file
op_staticIP=$(uci_get dhcp lan staticIP )

#get separate staticIP resource
op=$op_staticIP';'
if [ "$op_staticIP" != "" ]; then
	echo $op_staticIP > /config/ethers
	$(sed -i 's/;/\n/g' /config/ethers) 
	
else
	if [ -f "/config/ethers" ]; then
		rm /config/ethers
	fi
	touch /config/ethers
fi
